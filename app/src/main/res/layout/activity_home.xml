<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="@drawable/bh"
    tools:context=".activity.HomeActivity">


    <LinearLayout
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/boon"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:textAlignment="center"
            android:background="#ffff0000"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/follower"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:text="0"
            android:textAlignment="center"
            android:background="#6e6e6e"
            android:layout_weight="1"
            />
    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_below="@+id/status_bar"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/linearLayout">
    </android.support.v4.view.ViewPager>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:background="#d8ff7e4f"
        android:id="@+id/linearLayout">
        <ImageButton
            android:id="@+id/layer_menu_button"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_btt"
            android:background="@null"/>
        <ImageButton
            android:id="@+id/upgrade_menu_button"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/upgrade_btt"
            android:background="@null"/>
        <ImageButton
            android:id="@+id/tranform_menu_button"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/multi_btt"
            android:background="@null"/>
        <ImageButton
            android:id="@+id/top_up_menu_button"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/multi_btt"
            android:background="@null"/>
    </LinearLayout>
</RelativeLayout>
