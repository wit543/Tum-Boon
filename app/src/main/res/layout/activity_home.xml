<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="#fffadb"
    tools:context=".activity.HomeActivity">


    <LinearLayout
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/boon_label"
        android:paddingTop="15dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"


        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/boon"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/follower"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:text="0"
            android:textAlignment="center"
            android:layout_weight="1"
            />
    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_below="@+id/status_bar"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/linearLayout">
    </android.support.v4.view.ViewPager>


    <LinearLayout
        android:scaleType="centerCrop"
        android:paddingTop="5dp"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:background="@drawable/frame"
        android:id="@+id/linearLayout">
        <ImageButton
            android:id="@+id/layer_menu_button"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_bt"
            android:background="@null"/>
        <ImageButton
            android:id="@+id/upgrade_menu_button"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/upgrade_bt"
            android:background="@null"/>
        <ImageButton
            android:id="@+id/tranform_menu_button"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rebirth_bt"
            android:background="@null"/>
        <ImageButton
            android:id="@+id/top_up_menu_button"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/multi_bt"
            android:background="@null"/>
    </LinearLayout>
</RelativeLayout>
