<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/layer_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/upgrade_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_above="@+id/production_progress_bar" />
        />
    <TextView
        android:id="@+id/layer_name"
        android:text="LAYERNAME"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/layer_lv"
        android:layout_below="@id/layer_name"
        android:text="LEVEL"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:id="@+id/production_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_alignBottom="@+id/upgrade_button"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/upgrade_button"
        />

    <Button
        android:id="@+id/upgrade_button"
        android:text="UPGRADE"
        style="@android:style/Widget.ImageButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layer_lv"
        android:layout_alignParentEnd="true"
        android:padding="0dp"
        android:background="@drawable/normal_button"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 Boon/sec"
        android:id="@+id/layer_rate"
        android:layout_above="@+id/production_progress_bar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="107dp" />


</RelativeLayout>